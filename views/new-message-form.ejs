<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/form.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>

<body>
    <h2>New Message</h2>
    <%- include("partials/errors.ejs") %>
        <form action="/new" method="POST">
            <fieldset>
                <label>Title</label>
                <input id="messageTitle" name="messageTitle" placeholder="messageTitle" type="text" required />
                <label>Body</label>
                <input id="messageBody" name="messageBody" placeholder="messageBody" type="text" required />

            </fieldset>

            <button type="submit">Create</button>
        </form>

</body>

</html>